
@{
    ViewData["Title"] = "PasswordChange";
    Layout = "~/Views/Shared/_userLayout.cshtml";
}

@model BusinessObjects.User

@{
    ViewData["Title"] = "Change password";
}
<style>
    .error, .success {
        color: red;
        display: none;
        text-align: left;
    }
</style>
<div class="container">
    <div class="row">
        <div class="col-md-6 text-center mx-auto">
            <div class="card">
                <header class="card-header">
                    <h1>Change password</h1>
                </header>
                <div class="card-body">
                    <input type="hidden" value="oldPass" id="oldPass" />
                    <form asp-action="ChangePassword" asp-controller="User" id="report" autocomplete="off">
                        <div class="row form-group my-3">
                            <div class="col-sm-3">
                                <label for="old-password" class="form-label mb-0">Old password</label>
                            </div>
                            <div class="col-sm-9 ">
                                <input id="old-password" class="form-control form-control-sm" type="text"
                                       placeholder="Old password" onchange="validate('oldPass')">
                                <span class="error" id="oldPassErr">Old password error</span>
                            </div>
                        </div>
                        <div class="row form-group my-3">
                            <div class="col-sm-3">
                                <label for="new-password" class="form-label mb-0">New password</label>
                            </div>
                            <div class="col-sm-9">
                                <input id="new-password" class="form-control form-control-sm" type="text"
                                       placeholder="New password" onchange="validate('newPass')">
                                <span class="error" id="newPassErr">New pass error error</span>
                            </div>
                        </div>
                        <div class="row form-group my-3">
                            <div class="col-sm-3">
                                <label for="confPass" class="form-label mb-0">Confim new password</label>
                            </div>
                            <div class="col-sm-9">
                                <input id="confPass" class="form-control form-control-sm" type="text"
                                       placeholder="Confirm new password" onchange="validate('confPass')">
                                <span class="error" id="confPassErr">Confirm password error</span>
                            </div>
                        </div>
                        <div class="row form-group mt-5 px-3">
                            <button id="submit-btn" type="submit" class="btn btn-success col-md-3 me-3">Submit</button>
                            <button type="cancel" class="btn btn-danger col-md-3 me-auto">Cancel</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script defer src="~/js/passChange.js"></script>
