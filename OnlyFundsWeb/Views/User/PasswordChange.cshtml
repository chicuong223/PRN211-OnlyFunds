
@{
    ViewData["Title"] = "PasswordChange";
    Layout = "~/Views/Shared/_userLayout.cshtml";
}

@model BusinessObjects.User

@{
    ViewData["Title"] = "Change password";
}

<h1>Change password</h1>
<form asp-action="ChangePassword" asp-controller="User" id="report">
    <div class="container-fluid ps-0 pe-0">
        <div class="row ps-4 pe-4">
            <div class="col-12 mb-2">
                <label for="old-password" class="form-label mb-0">Old password</label>
                <input id="old-password" class="form-control form-control-sm" type="text"
                       placeholder="Old password">
            </div>
            <div class="col-12 mb-2">
                <label for="old-password" class="form-label mb-0">New password</label>
                <input id="old-password" class="form-control form-control-sm" type="text"
                       placeholder="New password">
            </div>
            <div class="col-12 mb-2">
                <label for="old-password" class="form-label mb-0">Confim new password</label>
                <input id="old-password" class="form-control form-control-sm" type="text"
                       placeholder="Confirm new password">
            </div>
        </div>
        <button type="submit" class="btn btn-success">Submit</button>
    </div>
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
