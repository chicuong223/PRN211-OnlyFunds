@model BusinessObjects.User

@{
    ViewData["Title"] = "UpdateUserInfo";
    Layout = "_userLayout";
}


<div class="container">
    <div class="main-body">
        <div class="row ">
            <div class="col-sm-6 mx-auto">
                <h1>Update User Info</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 mx-auto mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <img src="~/images/@Html.DisplayFor(model => model.AvatarUrl)" alt="Admin" class="rounded-circle" width="150">
                            <form asp-action="UpdateUserInfo" class="mt-3 w-100">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="Username"/>
                                <div class="row form-group">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0"><label asp-for="FirstName" class="control-label"></label></h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <input asp-for="FirstName" class="form-control"/>
                                        <span asp-validation-for="FirstName" class="text-danger"></span>
                                    </div>
                                </div>
                                <hr>
                                <div class="row form-group">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0"><label asp-for="LastName" class="control-label"></label></h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <input asp-for="LastName" class="form-control"/>
                                        <span asp-validation-for="LastName" class="text-danger"></span>
                                    </div>
                                </div>
                                <hr>
                                <div class="row form-group">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0"><label asp-for="Email" class="control-label"></label></h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <input readonly asp-for="Email" class="form-control"/>
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>
                                <hr>
                                <div class="row form-group">
                                    <div class="col-md-3 me-auto">
                                        <input type="submit" value="Save" class="btn btn-primary"/>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <a class="btn btn-info btn-sm col-sm-1 mx-auto" asp-action="Index">Back to List</a>
        </div>
    </div>
    
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
