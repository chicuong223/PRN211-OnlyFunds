@model BusinessObjects.User

@{
    ViewData["Title"] = "UpdateUserInfo";
    Layout = "_userLayout";
}


<div class="container">
    <div class="main-body">
        @*<div class="row ">
            <div class="col-sm-6 mx-auto">
                <h1>Update User Info</h1>
            </div>
        </div>*@
        <div class="row">
            <div class="col-md-6 mx-auto mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <img src="~/images/@Html.DisplayFor(model => model.AvatarUrl)" alt="Admin" class="rounded-circle my-md-5" width="150">
                            <form enctype="multipart/form-data" asp-action="UpdateUserInfo" class="mt-3 w-100">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="Username" />
                                <div class="row form-group">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0"><label asp-for="FirstName" class="control-label"></label></h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <input asp-for="FirstName" class="form-control" />
                                        <span asp-validation-for="FirstName" class="text-danger"></span>
                                    </div>
                                </div>
                            <hr/>
                                <div class="row form-group">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0"><label asp-for="LastName" class="control-label"></label></h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <input asp-for="LastName" class="form-control" />
                                        <span asp-validation-for="LastName" class="text-danger"></span>
                                    </div>
                                </div>
                            <hr/>
                                <div class="row form-group">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0"><label asp-for="Email" class="control-label"></label></h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <input readonly asp-for="Email" class="form-control" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>
                                <hr />
                                @*---------update avatar*@
                                <div class="row form-group">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0"><label asp-for="AvatarUrl" class="control-label"></label></h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <input type="file" asp-for="AvatarUrl" class="form-control" />
                                        <span asp-validation-for="AvatarUrl" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <div class="col-sm-9 text-secondary">
                                        <input type="hidden" asp-for="Password" value="@Model.Password" class="form-control" />
                                    </div>
                                </div>
                            <hr/>
                                <div class="row">
                                    <div class="col-md-8 row offset-md-3">
                                        <input type="submit" value="Save" class="col-sm-5 btn btn-primary ms-1 me-3" />
                                        <a class="btn btn-info col-sm-5" asp-action="Success">Back to list </a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
