@model BusinessObjects.PostReport
@using BusinessObjects
@using DataAccess.IRepository
@using DataAccess.Repository
@using Microsoft.AspNetCore.Http

@{
    Layout = "~/Views/Shared/_adminLayout.cshtml";
    Post post = ViewBag.Post;
}

<!-- Main content -->
<main class="mt-3">
    <div class="container w-75 ps-0 pe-0">
        <div class="row text-center">
            <h3>Report details</h3>
        </div>
        <div class="row d-flex justify-content-center">
            <div class="report-body w-75 border rounded-3 p-3">
                <form asp-action="Solve" method="post" asp-route-reportId="@Model.ReportId">
                    <div class="container">
                        <div class="row mt-3">
                            <div class="col-4">User report:</div>
                            <div class="col-8 fw-bold">
                                @Model.ReporterUsername
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-4">Reported post:</div>
                            <div class="col-8">
                                <a href="#reported-post" class="post-detail">
                                    <span class="post-name">@post.PostTitle</span>
                                    by
                                    <span class="author">@post.UploaderUsername</span>
                                </a>
                            </div>
                        </div>
                        <!-- Nếu report có description thì in row này ra không thì bỏ -->
                        <div class="row mt-3">
                            <div class="col-4">
                                Description:
                            </div>
                            <div class="col-8">
                                <textarea readonly class="form-control" style="height: 14rem; resize: none">@Model.ReportDescription</textarea>
                            </div>
                        </div>
                        <div class="row mt-3 pb-3">
                            <div class="col-4">Choose action:</div>
                            <div class="col-8">
                                <select class="form-select form-select-sm" name="action" id="action">
                                    <option value="del-post">Delete post</option>
                                    <option value="warn-user">Warn user</option>
                                    <option value="do-nothing" selected>Do nothing</option>
                                </select>
                            </div>
                        </div>
                        <div class="row mt-2 d-flex justify-content-evenly">
                            <button style="width: 100px;" type="submit" class="btn btn-success">Finish</button>
                            <a style="width: 100px;" class='btn btn-danger' value="Cancel" onclick="history.back(-1)">Cancel</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>
