@using Microsoft.AspNetCore.Http;
@using DataAccess.Repository;
@using DataAccess.IRepository;
@using BusinessObjects;
@using System.Collections
@{
    ICategoryRepository categoryRepository = new CategoryRepository();
    IEnumerable<Category> cateList = categoryRepository.GetCategories();
}
<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1">
    <!-- CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/Navbar.css">
    <link rel="stylesheet" href="~/css/user_page.css">
    <link rel="icon" href="images/logo_head.png" type="image/icon type">
    <script src="https://kit.fontawesome.com/30877617bb.js" crossorigin="anonymous"></script>
    <title>Creator's name</title>
</head>
<body>
    <header>
        <div id="app">
            <!-- Navigation bar -->
            <nav class="navbar navbar-expand-lg navbar-light bg-light shadow p-0">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <a asp-action="Success" asp-controller="User" class="nav-link d-flex align-items-center">
                            <img src="~/images/Logo.png"
                                 style="width:90px;" height="30px">
                        </a>
                        <!--button when navbar is collapse-->
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                                data-bs-target="#navbarSupportedContent">
                            <span class="navbar-toggler-icon"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>
                    <!--collapse when screen is smaller than 1200px-->
                    <div class="navbar-collapse collapse" id="navbarSupportedContent">
                        <!--Left nav-->
                        <nav class="nav navbar-nav" id="left-nav">
                            <span class="nav-item dropdown me-3">
                                <a href="#Category" class="nav-link dropdown-toggle text-dark" id="navbarDropdown"
                                   role="button" data-bs-toggle="dropdown">
                                    <u>Category</u>
                                </a>
                                <div class="container dropdown-menu">
                                    <div class="row">

                                        @{
                                            foreach (var category in cateList)
                                            {
                                                <div class="col-sm-4 nav-link m-0 p-0 text-center text-dark">
                                                    <a class="tag">@category.CategoryName</a>
                                                </div>
                                            }
                                        }
                                    </div>
                                </div>
                            </span>
                            <span class="nav-item mt-1 ms-5">
                                <form method="post" action="#search-function">
                                    <div class="input-group input-group-sm" id="search-input">
                                        <input type="text" class="form-control" placeholder="Search...">
                                        <button class="input-group-text" id="basic-addon2" type="submit">
                                            <i class="fas fa-search"></i>
                                        </button>
                                    </div>
                                </form>
                            </span>
                        </nav>
                        <!--Right nav-->
                        <nav class="nav navbar-nav ms-auto" id="right-nav">
                            <a asp-area="" asp-action="Create" asp-controller="Posts">Create new Post</a>
                            <!-- For user -->
                            <div class="nav-item" id="notification">
                                <a href="#Category" class="nav-link" id="navbarDropdown" role="button"
                                   data-bs-toggle="dropdown">
                                    <i class="fas fa-bell"></i>
                                </a>
                                <div class="dropdown-menu p-2" id="dropdown-noti">
                                    <a href="" class="col-xl-12 nav-link m-0 p-0 text-break border-bottom">
                                        This is a notifcation that is extremely long and big
                                        to test if it will break the website layout.
                                    </a>
                                    <a href="" class="col-xl-12 nav-link m-0 p-0 text-break border-bottom">
                                        This is a
                                        notification
                                    </a>
                                    <a href="" class="col-xl-12 nav-link m-0 p-0 text-break border-bottom">
                                        This is a
                                        notification
                                    </a>
                                    <a href="" class="col-xl-12 nav-link m-0 p-0 text-break border-bottom">
                                        This is a
                                        notification
                                    </a>
                                    <a href="" class="col-xl-12 nav-link m-0 p-0 text-break">This is a notification</a>
                                </div>
                            </div>
                            <div class="nav-item" id="user-dropdown">
                                <a href="#User-info" class="nav-link" id="navbarDropdown" role="button"
                                   data-bs-toggle="dropdown">
                                    <img class="rounded-pill" src="~/images/Avatar.png" width=40px
                                         height=40px alt="">
                                </a>
                                <div class="dropdown-menu m-0 p-0" style="width: 200px; position: absolute; left: 85vw;">
                                    <a asp-action="DetailsUser" asp-controller="User" asp-route-username="@Context.Session.GetString("user")" class="col-12 nav-link m-0 p-0 text-center border-bottom">Manage account</a>
                                    <a href="" class="col-12 nav-link m-0 p-0 text-center border-bottom">
                                        Manage
                                        subscription
                                    </a>
                                    <a asp-action="Logout" asp-controller="User" class="col-12 nav-link m-0 p-0 text-center">Logout</a>
                                </div>
                            </div>
                        </nav>
                    </div>
                </div>
            </nav>
        </div>
    </header>
    <!-- Main content -->
    <main class="mt-3">
        @RenderBody()
    </main>
    <!-- JavaScript Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4"
        crossorigin="anonymous"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>

</html>